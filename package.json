{
  "name": "claude-grep",
  "version": "1.0.0",
  "description": "Grep-like tool for searching Claude conversation history with multiple output formats",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "claude-grep": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:e2e": "npm run build && jest test/e2e",
    "test:ci": "jest --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install",
    "mcp": "node dist/mcp/server.js",
    "mcp:dev": "tsx src/mcp/server.ts",
    "web:dev": "tsx src/web/server.ts",
    "web:build": "echo 'No build needed for simple web interface'"
  },
  "keywords": [
    "claude",
    "mcp",
    "search",
    "conversation",
    "analysis",
    "cli"
  ],
  "author": "Neil Roberts <https://github.com/iamneilroberts>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fuzzy": "^0.1.3",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamneilroberts/claude-grep.git"
  },
  "bugs": {
    "url": "https://github.com/iamneilroberts/claude-grep/issues"
  }
}
